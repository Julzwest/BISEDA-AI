# Cache control headers for GitHub Pages / Netlify
# Prevent caching of HTML files

/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Allow caching of assets (they have hash in filename)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
